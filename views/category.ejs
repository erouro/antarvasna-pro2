<!DOCTYPE html>
<html lang="hi">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title><%= category %> - Antarvasna</title>
  <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
  <style>body{font-family:'Inter',sans-serif;background:#fff;color:#000;} a{color:#dc2626;}</style>
</head>
<body>
  <!-- Copy header/nav/mobile menu from index.ejs -->
  <header class="bg-red-600 text-white p-4 text-center"><h1 class="text-3xl font-bold">Antarvasna</h1><p class="text-red-100">Hindi Sex Stories</p><form action="/search" class="mt-4 max-w-md mx-auto"><input type="search" name="q" placeholder="Search" class="w-full p-2 rounded"></form></header>
  <nav class="bg-gray-100 p-4 hidden md:block"><!-- Categories links same as index --></nav>
  <div id="mobileMenu" class="md:hidden ..."><!-- Same as index --></div>
  <button onclick="toggleMenu()" class="md:hidden fixed top-4 right-4 z-40 bg-red-600 text-white p-2 rounded">â˜°</button>

  <main class="p-4 max-w-4xl mx-auto">
    <h2 class="text-2xl font-bold mb-4"><%= category %> Stories</h2>
    <% stories.forEach(s => { %>
      <article class="border-b pb-4 mb-4">
        <h3 class="text-xl font-semibold"><a href="/story/<%= s.id %>"><%= s.title %></a></h3>
        <p class="text-gray-600">On <%= s.date %></p>
        <% s.categories.forEach(cat => { %><a href="/category/<%= cat.toLowerCase().replace(/ /g, '-') %>" class="text-red-600 mr-2"><%= cat %></a><% }); %>
        <p>Tags: <% s.tags.forEach(tag => { %><a href="#" class="text-blue-600 mr-1"><%= tag %></a><% }); %></p>
        <p class="text-gray-600 mt-2"><%= s.excerpt %></p>
        <img src="<%= s.thumbnail %>" alt="" class="w-full h-48 object-cover mt-2 rounded">
      </article>
    <% }); %>

    <!-- Pagination same as index -->
    <% if (totalPages > 1) { %>
      <div class="flex justify-center mt-8 gap-2">
        <% if (currentPage > 1) { %><a href="?page=<%= currentPage - 1 %>" class="px-3 py-2 bg-red-600 text-white rounded">Prev</a><% } %>
        <% for (let i = 1; i <= totalPages; i++) { %>
          <a href="?page=<%= i %>" class="px-3 py-2 <%= i === currentPage ? 'bg-red-600 text-white' : 'bg-gray-200' %> rounded"><%= i %></a>
        <% } %>
        <% if (currentPage < totalPages) { %><a href="?page=<%= currentPage + 1 %>" class="px-3 py-2 bg-red-600 text-white rounded">Next</a><% } %>
      </div>
    <% } %>
  </main>

  <!-- Copy footer/modals/script from index.ejs -->
  <footer class="bg-gray-800 text-white p-4 mt-8 text-center"><!-- Same --></footer>
  <div id="subscribeModal"><!-- Same --></div>
  <div id="donateModal"><!-- Same --></div>
  <script>/* Same JS from index */</script>
</body>
</html>
